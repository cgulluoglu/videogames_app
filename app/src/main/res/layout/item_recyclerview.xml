<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f5f5f5"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <TextView
        android:id="@+id/tvVideoGameTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="Placeholder"
        android:textColor="#313130"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivVideoGameImg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvVideoGameRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Rating"
        android:textColor="#595959"
        app:layout_constraintStart_toEndOf="@+id/ivStar"
        app:layout_constraintTop_toBottomOf="@+id/tvVideoGameTitle" />

    <TextView
        android:id="@+id/tvVideoGameReleaseDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="ReleaseDate"
        android:textColor="#595959"
        app:layout_constraintStart_toEndOf="@+id/tvVideoGameRating"
        app:layout_constraintTop_toTopOf="@+id/tvVideoGameRating" />

    <ImageView
        android:id="@+id/ivVideoGameImg"
        android:layout_width="74dp"
        android:layout_height="61dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/ivStar"
        android:layout_width="21dp"
        android:layout_height="19dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/ivVideoGameImg"
        app:layout_constraintTop_toTopOf="@+id/tvVideoGameRating"
        app:srcCompat="@drawable/ic_baseline_star_rate_24" />


</androidx.constraintlayout.widget.ConstraintLayout>